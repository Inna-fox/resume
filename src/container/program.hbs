{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with program}}
        <main>
            <section>
                {{> title data="Cultural Tour" }}
                {{#with excursion}}
                <div>
                    <p>{{location.city}} - {{location.country}} </p>
                    <p>{{date}} </p>
                </div>
                <br>
                <strong>Program</strong>
                {{#each program}}
                    <br>
                    <div><p>{{name}} - {{type}} ({{duration}}) </p></div>
                    <p><em>Details</em></p>
                    {{#with details.venue}}
                        <p>{{name}} </p>
                        <p>{{location.address}}, {{location.city}}, {{location.country}} </p>
                        <br>
                        {{#each exhibits}}
                            <p> Name: {{name}}</p>
                            <p>Artist: {{#if artist}} {{artist}} {{else}}Inform is absent{{/if}}</p>
                            <p>Description: {{description}}</p>
                            <p>Audio guide: {{#if audio_guide}} Present {{/if}} </p>
                            <br>
                        {{/each}}
                    {{/with}}
                    <ul>
                    {{#each details.performers}}
                        <li>{{name}} ({{type}})</li>
                    {{/each}}
                    </ul>
                    <hr>
                    {{#with details.guide}}
                        <p><em>Guide</em> {{name}} </p>
                        <p><em>Language</em> {{language}} </p>
                        <p><em>Rating</em> {{rating}} </p>
                    {{/with}}
                {{/each}}
                {{/with}}
            </section>
        </main>
    {{/with}}
</div>

