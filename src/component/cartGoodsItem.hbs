{{#each goodsBlock}}
    <div class="card mb-3">
        <div class="row g-0">
            <div class="col-md-2">
                <img src="{{image}}" class="img-fluid rounded-start mt-2 ms-2" alt="{{name}}">
            </div>
            <div class="card-body col-md-4">
                <h5 class="card-title">{{name}}</h5>
                <p class="card-text">{{description}}</p>
            </div>
            <div class="col-md-2">
                {{#with price}}
                    <h5 class="card-title mt-3">{{title}}</h5>
                    <p class="card-text">{{value}}</p>
                {{/with}}
            </div>
            <div class="col-md-1">
                <p class="card-text mt-5"><small class="text-body-secondary">{{amount}}</small></p>
            </div>
            <div class="col-md-2">
                {{#each buttons}}
                    <button class="btn {{#if isPrimary}} btn-primary {{/if}} {{#if isDanger}} btn-outline-danger {{/if}} mt-3">{{text}}"</button>
                {{/each}}
            </div>
        </div>
    </div>
{{/each}}