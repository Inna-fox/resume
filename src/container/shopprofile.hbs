{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <main>
        <div class="row">
            <div class="card my-4">
            {{#with navigation}}
                <div class="nav">
                    {{#each links}}
                        <div class="nav-item">
                            {{#if href}}
                                <a href="{{href}}" class="nav-link">{{text}} </a>
                                {{else}}
                                <a href="{{href}}" class="nav-link disabled">{{text}} </a>
                            {{/if}}
                        </div>
                    {{/each}}
                </div>
            {{/with}}
            </div>
            <h1 class="my-5">{{header}}</h1>
            {{#with purchase}}
                <div class="nav nav-tabs m-2">
                    {{#each tabs}}
                        <div class="nav-item">
                            <div class="nav-link {{#if @first}}active{{/if}}">{{this}}</div>
                        </div>
                    {{/each}}
                </div>
                <div class="row">
                    {{#with actionBlock}}
                        <div class="col-4 mt-2">
                            {{#with input}}
                                <input class="form-control" placeholder="{{placeholder}}" aria-label="{{placeholder}}">
                            {{/with}}
                        </div>
                        <div class="col-8 mt-2">
                            {{#each buttons}}
                                <a href="{{link}}" class="btn {{#if isSuccess}} btn-success {{/if}} {{#if isOutline}} btn-outline-success {{/if}} {{#if isDanger}} btn-outline-danger {{/if}}">{{text}}</a>
                            {{/each}}
                        </div>
                    {{/with}}
                </div>
                <hr class="my-5">
                {{>purchaseItem}}
            {{/with}}
            <hr class="mt-1 mb-5">
            {{#with userInfo}}
                <h2>{{title}}</h2>
                <div class="card">
                    {{#with profileData}}
                        <h4 class="m-3">{{title}}</h4>
                        <div class="card m-2">
                            {{#with fullName}}
                                <div class="card-body row">
                                    <div class="col-4">
                                        {{#with surname}}
                                            <h5 class="card-title">{{title}}</h5>
                                            <p class="card-text">{{value}}</p>
                                        {{/with}}
                                    </div>
                                    <div class="col-4">
                                        {{#with name}}
                                            <h5 class="card-title">{{title}}</h5>
                                            <p class="card-text">{{value}}</p>
                                        {{/with}}
                                    </div>
                                    <div class="col-4">
                                        {{#with middleName}}
                                            <h5 class="card-title">{{title}}</h5>
                                            <p class="card-text">{{value}}</p>
                                        {{/with}}
                                    </div>
                                </div>
                            {{/with}}
                        </div>
                        <div class="card m-2">
                            {{#with otherInfo}}
                                <div class="card-body row">
                                    <div class="col-4">
                                        {{#with birthday}}
                                            <h5 class="card-title">{{title}}</h5>
                                            <p class="card-text">{{value}}</p>
                                        {{/with}}
                                    </div>
                                    <div class="col-4">
                                        {{#with sex}}
                                            <h5 class="card-title">{{title}}</h5>
                                            <p class="card-text">{{value}}</p>
                                        {{/with}}
                                    </div>
                                    <div class="col-4">
                                        {{#with language}}
                                            <h5 class="card-title">{{title}}</h5>
                                            <p class="card-text">{{value}}</p>
                                        {{/with}}
                                    </div>
                                </div>
                            {{/with}}
                        </div>
                    {{/with}}
                    <div class="card m-2">
                        <div class="row">
                            {{#each buttons}}
                                <div class="col-4">
                                    <a href="{{link}}" class="btn {{#if isPrimary}} btn-primary {{/if}} {{#if isSecondary}} btn-outline-secondary {{/if}} {{#if isDanger}} btn-outline-danger {{/if}} m-2">{{text}}</a>
                                </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
                <div class="card mt-2">
                    {{#with recipients}}
                        <h4 class="m-3">{{title}}</h4>
                        <div class="row">
                            {{#each users}}
                                <div class="card col-4 m-2">
                                    <div class="card-body">
                                        <h5 class="card-title">{{name}}</h5>
                                        <p class="card-text">{{phone}}</p>
                                        {{#with button}}
                                            <a href="{{link}}" class="btn btn-primary">{{text}}</a>
                                        {{/with}}
                                    </div>
                                </div>
                            {{/each}}
                        </div>
                    {{/with}}
                </div>
                <div class="card mt-2">
                    {{#with contacts}}
                        <h4 class="m-3">{{title}}</h4>
                        <div class="row">
                            {{#each contactData}}
                                <div class="card col-3 m-2">
                                    <div class="card-body">
                                        <h5 class="card-title">{{title}}</h5>
                                        <p class="card-text">{{value}}</p>
                                        {{#with button}}
                                            <a href="{{link}}" class="btn {{#if isPrimary}} btn-primary {{/if}} {{#if isSecondary}} btn-outline-secondary {{/if}} {{#if isDanger}} btn-outline-danger {{/if}} m-2">{{text}}</a>
                                        {{/with}}
                                    </div>
                                </div>
                            {{/each}}
                        </div>
                    {{/with}}
                </div>
            {{/with}}
            <hr class="my-5">
            <div class="row">
                {{#each footer}}
                    <ul class="nav col-2">
                        {{#each this}}
                            <li class="nav-item flex-column">
                                <a href="{{link}}" class="nav-link {{#if @last}}disabled{{/if}}">{{text}} </a>
                            </li>
                        {{/each}}
                    </ul>
                {{/each}}
            </div>
        </div>
    </main>
</div>

