{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <main>
        <section class="card">
            {{#with heading}}
                <div class="card">
                    {{#with main}}
                        <div class="card-body">
                            <h1>{{title}}</h1>
                            <p>{{text}} </p>
                            {{#with button_text}}
                                <button class="btn btn-primary">
                                    <span>{{solid}} </span>
                                </button>
                                <br>
                                <br>
                                <button class="btn btn-outline-primary">
                                    <span>{{outline}} </span>
                                </button>
                            {{/with}}
                        </div>
                    {{/with}}  
                </div>
                <br>
                <div class="card">
                    {{#with second}}
                        <div class="card-body">
                            <h2>{{title}}</h2>
                            <p>{{text}} </p>
                            {{#with button_text}}
                                <p><button class="btn btn-secondary">
                                    <span>{{solid}} </span>
                                </button></p>
                                <p><button class="btn btn-outline-secondary">
                                    <span>{{outline}} </span>
                                </button></p>
                            {{/with}}
                        </div>
                    {{/with}}
                </div>
                <br>
                <div class="card">
                    {{#with subblock}}
                        <div class="card-body">
                            <h3>{{title}}</h3>
                            <p>{{text}} </p>
                            {{#with button_text}}
                                <p><button class="btn btn-dark">
                                    <span>{{solid}} </span>
                                </button></p>
                                <p><button class="btn btn-outline-dark">
                                    <span>{{outline}} </span>
                                </button></p>
                            {{/with}}
                        </div>
                    {{/with}}        
                </div>
            {{/with}}
        </section>
        <br>
        <section class="card">
            {{#with nested_display}}
                <div class="card-body">
                    <div class="display-1">{{title}} </div>
                </div>
                <div class="card">
                    {{#with children_display}}
                        <div class="card-body">
                            <div class="display-4">{{title}} </div>
                            <p>{{text}} </p>
                            <button class="btn btn-outline-warning">
                                <span>{{button.text}} </span>
                            </button>
                        </div>
                    {{/with}}
                </div>
                <br>
                <h6>{{header_text}} </h6>
                <div><button class="btn btn-info">
                    <span>{{button.text}} </span>
                </button></div>
            {{/with}}
        </section>
        <br>
        <section class="card">
            {{#with paragraph}}
                <div class="card-body">
                    <div class="text-uppercase">{{title}} </div>
                    <br>
                    <div class="text-lowercase">{{text}} </div>
                    {{#with button}}
                        <a href="{{url}}"><button class="btn btn-link">{{text}} </button></a>
                    {{/with}}
                </div>
                <div class="card">
                    <div class="card-body">
                        <ul>
                            {{#each list_name}}
                                <li><a href="{{url}}"><button class="btn btn-link">{{text}} </button></a></li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            {{/with}}
        </section>
    </main>
</div>

