{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <main>
        <section>
              {{> title data="Albert Einstein" }}
             <div>
                <p>{{birthdate}} - {{birthplace}}</p>
                <p>{{deathdate}} - {{deathplace}} </p>
                <p>{{nationality}} </p>
                <p>{{occupation}} </p>
                <ul>
                {{#each known_for}}
                    <li>{{this}} </li>
                {{/each}}
                </ul>
                <hr>
                <em>Education</em>
                {{#each education}}
                    <p>{{degree}}</p>
                    <p>{{field}} </p>
                    <p>{{institution}} ({{year}})</p>
                {{/each}}
                <hr>
                <em>Notable publications:</em>
                <ul>
                {{#each notable_publications}}
                    <li>{{title}} - {{publisher}} ({{year}}) </li>
                {{/each}}
                </ul>
                <hr>
                <em>Partners</em>
                <ul>
                {{#each partners}}
                    <li>{{name}} - {{relationship}} ({{years}}) </li>
                {{/each}}
                </ul>
                <hr>
                <em>Awards</em>
                {{#each awards}}
                    <p>{{title}} ({{year}}) </p>
                    <p>{{description}} </p>
                {{/each}}
                <br>
                <em>Influences</em>
                <ul>
                {{#each influences}}
                    <li>{{this}} </li>
                {{/each}}
                </ul>
                <br>
                <em>Influenced</em>
                <ul>
                {{#each influenced}}
                    <li>{{this}} </li>
                {{/each}}
                </ul>
                <br>
                <em>Quotes</em>
                <ul>
                {{#each quotes}}
                    <li>{{this}} </li>
                {{/each}}
                </ul>
                <hr>
                <br>
                <em>Major discoveries</em>
                {{#each major_discoveries}}
                    <p>{{title}} ({{year}}) </p>
                    <p>{{description}} </p>
                {{/each}}
                <br>
                <em>Contributions</em>
                {{#with contributions}}
                    <p>{{title}} ({{year}}) </p>
                    <p>{{description}} </p>
                    <p>{{field}} </p>
                {{/with}}
            </div>
        </section>
    </main>
</div>

