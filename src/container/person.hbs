{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with person}}
        <main>
            <section>
                {{> title data="Emma Johnson" }}
                <div>
                    <p>{{age}} </p>
                    <p>{{gender}}</p>
                </div>
                <div>
                    {{#with address}}
                        <p> {{street}}, {{city}}, {{state}}, {{zip}}, {{country}} </p>
                    {{/with}}
                </div>
                <hr>
                <br>
                <div>
                    <em>Education</em>
                    <ul>
                        {{#each education}}
                            <p>{{degree}} </p>
                            <p>{{major}} </p>
                            <p>{{university}} </p>
                            <p>{{graduationYear}}</p>
                        {{/each}}
                    </ul>
                </div>
                <hr>
                <br>
                <div>
                    <em>Work Experience</em>
                    <ul>
                        {{#each workExperience}}
                            <p>{{company}} </p>
                            <p>{{title}} </p>
                            <p>{{startDate}} - {{endDate}}</p>
                            <p>{{responsibilities}}</p>
                            <p>{{year_founded}} </p>
                            <p>{{industry}} </p>

                            {{#each employees}}
                                <p>Employees {{name}} </p>
                                <p>{{position}} </p>
                                <p>{{department}} </p>
                                <ul>
                                    {{#each projects}}
                                        <p>{{name}}</p>
                                        <p>{{description}} </p>
                                        <p>{{status}} </p>
                                        <ul>
                                            {{#each teams}}
                                                <div>{{team_name}} </div>
                                                <div>{{team_leader.title}}: {{> link text=team_leader.name href=team_leader.email blank=true noLine=true}}</div>
                                               
                                                {{#each team_members}} 
                                                    <div>{{title}}: {{> link text=name href=email blank=true noLine=true}}</div>
                                                    <br>
                                                    <ul>
                                                        {{#each skills}}
                                                            <li> {{this}} </li>
                                                        {{/each}}
                                                    </ul>
                                                    <br>
                                                    <ul>
                                                        {{#each projects}}
                                                            <div>{{name}} </div>
                                                            <div>{{description}} </div>
                                                            <br>
                                                            {{#each technologies}}
                                                                <li>{{this}} </li>
                                                            {{/each}}
                                                            <br>
                                                            {{#each team_members}}
                                                                <li>{{title}}: {{name}} </li>
                                                            {{/each}}
                                                        {{/each}}
                                                    </ul>
                                                {{/each}}
                                            {{/each}}
                                        </ul>
                                    {{/each}}
                                </ul>
                            {{/each}}
                        {{/each}}
                    </ul>
                </div>
            </section>
        </main>
    {{/with}}
</div>

